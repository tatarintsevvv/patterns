<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.SecondScreenFragment">

<com.google.android.material.textview.MaterialTextView
    android:id="@+id/input_sms_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#3F434A"
    android:text="@string/input_sms_code"
    android:textSize="24sp"
    android:layout_marginStart="@dimen/second_screen_input_margin_left"
    android:layout_marginTop="54dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_digi_1"
        style="@style/Theme.MVI.InputDigitSMS"
        android:layout_marginStart="@dimen/second_screen_input_margin_left"
        android:layout_marginTop="40dp"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_sms_text" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_digi_2"
        style="@style/Theme.MVI.InputDigitSMS"
        android:layout_marginStart="@dimen/second_screen_input_margin_left"
        android:layout_marginTop="40dp"
        android:maxLength="1"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/input_digi_1"
        app:layout_constraintTop_toBottomOf="@id/input_sms_text" />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_digi_3"
        style="@style/Theme.MVI.InputDigitSMS"
        android:layout_marginTop="40dp"
        android:layout_marginStart="@dimen/second_screen_input_margin_left"
        app:layout_constraintTop_toBottomOf="@id/input_sms_text"
        app:layout_constraintStart_toStartOf="@id/input_digi_2"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_digi_4"
        style="@style/Theme.MVI.InputDigitSMS"
        android:layout_marginTop="40dp"
        android:layout_marginStart="@dimen/second_screen_input_margin_left"
        app:layout_constraintTop_toBottomOf="@id/input_sms_text"
        app:layout_constraintStart_toStartOf="@id/input_digi_3"
        />
</androidx.constraintlayout.widget.ConstraintLayout>