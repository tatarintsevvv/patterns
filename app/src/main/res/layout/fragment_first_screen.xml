<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.FirstScreenFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_screen_gradient"
    >


        <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_xc"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/oferta_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/oferta_text"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/oferta_text_hor_padding"
            android:layout_marginEnd="@dimen/oferta_text_hor_padding"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/repeat_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_button_margin"
        android:layout_marginEnd="@dimen/big_button_margin"
        android:layout_marginBottom="14dp"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/white"
        android:inputType="textCapWords"
        android:text="@string/repeat"
        android:textColor="?colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/oferta_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone_number_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            app:helperText="Введите номер вашего телефона"
            app:helperTextTextColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginStart="@dimen/phone_text_hor_margin"
            android:layout_marginEnd="@dimen/phone_text_hor_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/repeat_button">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_7"
            android:textColor="@color/white"
            android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminate="true"
            />


</androidx.constraintlayout.widget.ConstraintLayout>

